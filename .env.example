# Railway will auto-populate these from services
PORT=8088
LOG_LEVEL=info
DRY_RUN=false

# Database Configuration
# PostgreSQL for auth/transactional data (Railway PostgreSQL plugin)
POSTGRES_URL=${DATABASE_URL}

# BigQuery for analytics data
BIGQUERY_PROJECT_ID=your-gcp-project-id
BIGQUERY_DATASET=synter_analytics
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Legacy MySQL (for migration period only)
DB_HOST=${MYSQLHOST}
DB_PORT=${MYSQLPORT}
DB_USER=${MYSQLUSER}
DB_PASSWORD=${MYSQLPASSWORD}
DB_NAME=synter

# Redis - Railway Redis plugin will auto-provide this
REDIS_URL=${REDIS_URL}

# Auth Secrets - Generate these with: openssl rand -hex 32
JWT_SECRET=REPLACE_WITH_GENERATED_SECRET
SESSION_SECRET=REPLACE_WITH_GENERATED_SECRET

# === OAUTH & API KEYS - ADD YOUR CREDENTIALS BELOW ===

# Google OAuth (User Signin)
# Get from: Google Cloud Console > APIs & Services > Credentials
# Redirect URIs: https://your-railway-domain.railway.app/auth/google/callback
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=

# Google Ads API (Campaign Data)
# Get from: Google Ads Manager > Tools > API Center
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=
GOOGLE_ADS_DEVELOPER_TOKEN=

# OpenAI (AI Features)
# Get from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=

# Microsoft Ads API
# Developer Token: 11085M29YT845526
# Setup Guide: https://docs.microsoft.com/en-us/advertising/guides/authentication-oauth
# Get from: Azure Portal > App registrations
MICROSOFT_ADS_DEVELOPER_TOKEN=11085M29YT845526
MICROSOFT_ADS_CLIENT_ID=
MICROSOFT_ADS_CLIENT_SECRET=
MICROSOFT_ADS_REFRESH_TOKEN=
MICROSOFT_ADS_CUSTOMER_ID=
MICROSOFT_ADS_ACCOUNT_ID=

# Reddit Ads API (Optional)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_ACCESS_TOKEN=

# Twitter/X Ads API (Optional)
TWITTER_BEARER_TOKEN=
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# Mock flags - Set to true to skip external APIs during development
MOCK_GOOGLE=false
MOCK_REDDIT=true
MOCK_TWITTER=true
MOCK_MICROSOFT=true

# Stripe (Payments & Billing)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email (Magic Links) - Optional
EMAIL_FROM=noreply@yourdomain.com
POSTMARK_API_TOKEN=

# PPC Manager Backend (for apps/web API proxy)
PPC_BACKEND_URL=http://localhost:8000
PPC_BACKEND_BASIC_USER=admin
PPC_BACKEND_BASIC_PASS=change-me
